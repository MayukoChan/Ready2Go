<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/paperbackgroundandroid"
    tools:context=".SplashScreen">

    <ImageView
        android:id="@+id/appIcon"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_centerInParent="true"
        android:src="@drawable/logo2" />

    <TextView
        android:id="@+id/txtAppName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/appIcon"
        android:layout_centerInParent="true"
        android:textColor="@color/black"
        android:text="Ready2Go"
        android:textSize="45dp"
        android:textStyle="bold|italic" />

    <TextView
        android:layout_marginTop="70dp"
        android:layout_below="@+id/txtAppName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="from"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="italic"
        android:id="@+id/txtFrom"/>
    
    <TextView
        android:id="@+id/txtReady2Go"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtFrom"
        android:text="Ready2Go Team"
        android:textSize="30dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"/>
    
    <ImageView
        android:layout_width="120dp"
        android:layout_height="100dp"
        android:src="@drawable/stitransparent"
        android:layout_below="@+id/txtReady2Go"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:paddingBottom="25dp"
        />


</RelativeLayout>